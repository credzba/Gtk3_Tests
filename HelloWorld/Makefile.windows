RM=del /Q

# Default target
all: build

# Build Release
build: $(SRC) $(UI_FILES)
	MSBuild.exe $(SOLUTION) -p:Configuration=Release -p:Platform=x64
	@echo "Build complete."

# Build Debug
debug: $(SRC) $(UI_FILES)
	MSBuild.exe $(SOLUTION) -p:Configuration=Debug -p:Platform=x64
	@echo "Debug build complete."

# Clean
clean:
	MSBuild.exe $(SOLUTION) -t:Clean
	$(RM) $(APP) *.pdb
	@echo "Clean complete."

.PHONY: all build debug clean