<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>

  <object class="GtkWindow" id="main_window">
    <property name="title">GTK Hello Scroll</property>
    <property name="default-width">600</property>
    <property name="default-height">200</property>
    <signal name="destroy" handler="OnDestroy"/>

    <child>
      <object class="GtkBox" id="vbox">
        <property name="orientation">vertical</property>
        <property name="spacing">5</property>

        <!-- Scrolling area -->
        <child>
          <object class="GtkFixed" id="scroll_area">
            <property name="height-request">40</property>

            <child>
              <object class="GtkLabel" id="scroll_label">
                <property name="label">Hello World</property>
              </object>
            </child>
          </object>
        </child>

        <!-- Spacer to push button to bottom -->
        <child>
          <object class="GtkBox">
            <property name="expand">true</property>
          </object>
        </child>

        <!-- Exit button -->
        <child>
          <object class="GtkBox">
            <property name="halign">center</property>
            <child>
              <object class="GtkButton" id="exit_button">
                <property name="label">Exit</property>
                <signal name="clicked" handler="OnExitClicked"/>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>
  </object>
</interface>
