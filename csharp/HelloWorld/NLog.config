<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <!-- Console target with timestamp -->
    <target name="console" xsi:type="ColoredConsole"
            layout="${longdate} | ${level:uppercase=true:padding=-5} | ${logger:shortName=true} | ${message} ${exception:format=tostring}" />
    
    <!-- File target with timestamp -->
    <target name="file" xsi:type="File"
            fileName="nlog.log"
            layout="${longdate} | ${level:uppercase=true:padding=-5} | ${logger:shortName=true} | ${message} ${exception:format=tostring}"
            archiveFileName="nlog.{#}.log"
            archiveNumbering="Date"
            archiveEvery="Day"
            maxArchiveFiles="7" />
  </targets>

  <rules>
    <!-- Log Warn, Error, and Fatal -->
    <logger name="*" minlevel="Warn" writeTo="console,file" />
  </rules>
</nlog>
